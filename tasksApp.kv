#:kivy 2.3

<HomeScreen>:
    id: home
    HomeScreenCanvas:
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size

        FloatLayout:
            Label:
                text: "Task Manager"
                font_name: "CustomFont"
                font_size: "32sp"
                size_hint: None, None
                size: self.texture_size
                pos_hint: {"center_x": 0.5, "center_y": 0.8}
                color: 0.18, 0.28, 0.35, 1

            MDButton:
                style: "tonal"
                adaptive_size: True
                pos_hint: {"center_x":0.5, "center_y":0.6}
                on_press: app.root.current = 'tasks'
                text: "Add Task"
                font_size: "20sp"

            MDButton:
                style: "tonal"
                adaptive_size: True
                pos_hint: {"center_x":0.5, "center_y":0.53}
                on_press: app.go_calendar()
                text: "Monthly View"
                font_size: "20sp"

            MDButton:
                style: "tonal"
                adaptive_size: True
                pos_hint: {"center_x":0.5, "center_y":0.46}
                text: "Save Tasks"
                font_size: "20sp"


<AddTasksScreen>:
    id: tasks
    AddTasksScreenCanvas:
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size

        FloatLayout:
            MDTopAppBar:
                type: "small"
                size_hint_x: 1
                pos_hint: {"center_x": .5, "center_y": 0.96}
                MDTopAppBarLeadingButtonContainer:
                    MDActionTopAppBarButton:
                        icon: "home"
                        on_press: app.go_home()

            Label:
                text: "Add a Task"
                font_name: "CustomFont"
                font_size: "24sp"
                size_hint: None, None
                size: self.texture_size
                pos_hint: {"center_x": 0.5, "center_y": 0.93}
                color: 0, 0, 0, 1

            Label:
                text: "Task Name:"
                font_name: "CustomFont"
                font_size: "18sp"
                size_hint: None, None
                size: self.texture_size
                pos_hint: {"center_x":0.5, "center_y":0.8}

            MDTextField:
                id: task_name
                adaptive_size: True
                pos_hint: {"center_x":0.5, "center_y":0.74}
                mode: "outlined"
                size_hint_x: 0.4
                required: True
                MDTextFieldHintText:
                    text: "Task name"

            Label:
                text: "Due Date (YYYY/MM/DD):"
                font_name: "CustomFont"
                font_size: "18sp"
                size_hint: None, None
                size: self.texture_size
                pos_hint: {"center_x":0.5, "center_y":0.68}

            MDTextField:
                id: due_date
                mode: "outlined"
                adaptive_size: True
                pos_hint: {"center_x":0.5, "center_y":0.62}
                size_hint_x: 0.4
                required: True
                validator: "date"
                date_format: "yyyy/mm/dd"
                MDTextFieldHintText:
                    text: "YYYY/MM/DD"

            Label:
                text: "Priority:"
                font_name: "CustomFont"
                font_size: "18sp"
                size_hint: None, None
                size: self.texture_size
                pos_hint: {"center_x":0.5, "center_y":0.56}

            MDTextField:
                id: priority
                mode: "outlined"
                adaptive_size: True
                pos_hint: {"center_x":0.5, "center_y":0.5}
                size_hint_x: 0.4
                required: True
                MDTextFieldHintText:
                    text: "Priority"

            Label:
                text: "Description:"
                font_name: "CustomFont"
                font_size: "18sp"
                size_hint: None, None
                size: self.texture_size
                pos_hint: {"center_x":0.5, "center_y":0.44}

            MDTextField:
                id: description
                mode: "outlined"
                adaptive_size: True
                pos_hint: {"center_x":0.5, "center_y":0.38}
                size_hint_x: 0.4
                required: True
                MDTextFieldHintText:
                    text: "Description"

            MDButton:
                style: "tonal"
                adaptive_size: True
                pos_hint: {"center_x":0.5, "center_y":0.3}
                on_press: app.save_task()
                text: "Save Task"
                font_size: "20sp"



<CalendarScreen>:
    id: calendar
    CalendarScreenCanvas:
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size

        FloatLayout:
            MDTopAppBar:
                type: "small"
                size_hint_x: 1
                pos_hint: {"center_x": .5, "center_y": 0.96}
                MDTopAppBarLeadingButtonContainer:
                    MDActionTopAppBarButton:
                        icon: "home"
                        on_press: app.go_home()

            Label:
                text: "My Calendar"
                font_name: "CustomFont"
                font_size: "24sp"
                size_hint: None, None
                size: self.texture_size
                pos_hint: {"center_x": 0.5, "center_y": 0.93}
                color: 0, 0, 0, 1

            Label:
                id: task_list
                text: "HELLO WORLD"
                font_name: "CustomFont"
                font_size: "18sp"
                size_hint: None, None
                size: self.texture_size
                pos_hint: {"center_x":0.5, "center_y":0.8}
